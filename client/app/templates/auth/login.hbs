{{title "Login"}}

<div class="login-form">
    <h1> Login </h1>
    <p> Registration is closed. Sorry. </p>
    {{#if errorMessage}}
    <p class="error-message">
        <h4>Error!</h4>
        {{errorMessage}}
    </p>
    {{/if}}
    <form {{action "authenticate" on="submit"}}>
        {{input id="username" value=username placeholder="enter username"}}
        {{input id="password" value=password placeholder="enter password" type="password"}}
        <input type="submit" value="Login">
    </form>
</div>
