{{title "Login"}}

<div class="login-form">
    <p class="title">
        Login
    </p>
    <p> Registration is invitation only. Sorry. </p>
    {{#if errorMessage}}
    <p class="error-message">
        <p class="message-title">Error!</p>
        {{errorMessage}}
    </p>
    {{/if}}
    <form {{action "authenticate" on="submit"}}>
        {{input id="username" value=username placeholder="enter username"}}
        {{input id="password" value=password placeholder="enter password" type="password"}}
        <input type="submit" value="Login">
    </form>
</div>
