<div class="post">
    <div class="toolbar">
        <ul>
            <li>
                {{link-to "[F4] Edit" "blog-posts.post-edit" model}}
                <a {{action "delete" model}}>[F8] Delete</a>
            </li>
        </ul>
    </div>
    <p class="post-created">
        {{moment-format model.dateCreated "DD/MM/YY HH:mm"}}
    </p>
    <p class="post-title">
        {{model.title}} 
    </p>
    {{#blog-post-body}}
        {{{model.body}}}
    {{/blog-post-body}}
    {{tags-list tags=model.tags}}
</div>
