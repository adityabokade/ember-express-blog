<div class="list">
    <ul>
        {{#each model as |item|}}
            <li>
                <p class="created">
                    <b> {{if item.isPublished "" "[ DRAFT ]"}} </b>
                    {{moment-from-now item.dateCreated interval=60000}}
                </p>
                <p class="title">
                    {{#link-to "blog-posts.post-read" item}}{{item.title}}{{/link-to}}
                </p>
                <p class="description">
                    {{item.description}}
                </p>
                {{!--
                <p class="comments">
                    <small>{{disqus-comment-count identifier=item.id}}</small>
                </p>
                --}}
                {{tags-list tags=item.tags}}
                {{!--
                {{#if item.project}}
                    <p class="project">
                        Related to project: {{item.project.name}}
                    </p>
                {{/if}}
                --}}
            </li>
        {{/each}}
    </ul>
</div>
